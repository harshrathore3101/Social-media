<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .box {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 5px;
        border-bottom: 1px solid black;
      }
      a {
        text-decoration: none;
        font-style: 30px;
      }
      i {
        color: black;
        font-style: 30px;
        margin-left: 50px;
      }
      .comment {
        outline: none;
        margin-top: 10px;
      }
      #post {
        border: 1px solid rgb(203, 203, 203);
        padding: 20px;
        border-radius: 10px;
      }
      #comment {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      #uname {
        margin-top: 10px;
      }
      #uname p {
        font-size: 17px;
      }

      #uname h4 {
        font-size: 17px;
      }
      .box h3,
      p {
        font-size: 20px;
      }
      #pimg {
        width: 30px;
        height: 30px;
        border-radius: 50%;
      }
      #proname {
        display: flex;
        align-items: center;
      }
      #proname h3 {
        margin-left: 10px;
      }
      .box p {
        margin-left: 40px;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <!-- <a class="btn btn-primary" href="/allpost">All posts</a> -->
      <a class="btn btn-primary" href="/profile">Go back to profile</a>
      <a class="btn btn-primary" href="/logout">logout</a>
      <% allpost.forEach(function(val){ %>
      <div id="post" class="mt-4">
        <div class="box mt-4">
          <span>
            <span id="proname">
              <!-- <p><%= val.userid.username %></p> -->

              <img
                id="pimg"
                src="./images/uploads/<%= val.userid.img%>"
                alt=""
              />
              <h3><%=val.userid.username%></h3>
            </span>
            <p><%= val.post %></p>
          </span>
          <span>
            <a href="/like/<%= val._id %>" class="btn btn-primary"
              ><%=val.likes.length %> like</a
            >
          </span>
        </div>
        <% val.comment.forEach(function(elm){ %>
        <div id="comment">
          <div id="uname">
            <h4>Comment by - <%= elm.username %></h4>
            <p>Comment is - <%= elm.comment %></p>
          </div>
          <!-- <a href=""><i class="ri-delete-bin-line"></i></a> -->
        </div>
        <% }) %>
        <form action="/comment/<%=val._id %>" method="post">
          <div class="mb-3">
            <!-- <label for="exampleInputEmail1" class="form-label">Username</label> -->
            <input
              name="comment"
              type="text"
              placeholder="Add a Comment"
              class="form-control comment"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
            />
          </div>
        </form>
      </div>
      <% }) %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
